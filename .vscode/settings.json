{
  "markdown.extension.toc.updateOnSave": true,
  "markdown.extension.toc.levels": "2..4",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontSize": 16,
  "editor.fontFamily": "'FiraCode Nerd Font Mono', 'Fira Code', 'SourceCode Pro' , Consolas, monospace",
  "terminal.integrated.fontFamily": "'JetBrainsMonoNL NFM', 'JetBrainsMono Nerd Font Mono'",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#294a5b",
    "activityBar.activeBorder": "#fbfbfb",
    "activityBar.foreground": "#fafa0f"
  },
  "editor.formatOnSave": false,
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "eslint.alwaysShowStatus": true,
  "prettier.trailingComma": "all",
  "files.associations": {
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript",
    "*.wpy": "vue",
    "*.ejs": "html",
    "*.html": "html"
  },
  "emmet.includeLanguages": {
    "wxml": "html"
  },
  "files.eol": "\n",
  "git.autofetch": true,
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.exclude": {
    "**/.git": false,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  }
}
